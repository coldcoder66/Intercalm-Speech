    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api/main.py",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ],
     "compounds": [
        {
        "name": "Client & Server",
        "configurations": [
        "Debug API",
        "Debug App"
        ]
        }
    ]
}