ScreenManager:
    HomeScreen:
        name: 'home'
    QAScreen:
        name: 'qa'
    QuizScreen:
        name: 'quizscreen'
    LessonScreen:
        name: 'lessonscreen'
    FlashcardScreen:
        name: 'Flashcardscreen'
    WritingScreen:
        name: 'writingscreen'

<HomeScreen>:
    id: home
    HomeScreenCanvas:
        FloatLayout:
            Image:
                source: 'background.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'uppercornerlogo.webp'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'websitelogo.webp'
                size_hint: (None, None)
                size: (2900, 2900)
                pos_hint: {"center_x": 0.5, "center_y": 0.64}
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.65}
                text: "Lessons"
                font_size: "24sp"
                on_press: app.root.current = 'lessonscreen'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.55}
                text: "Flashcards"
                font_size: "24sp"
                on_press: app.root.current = 'flashcardscreen'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.45}
                text: "Quizzes"
                font_size: "24sp"
                on_press: app.root.current = 'quizscreen'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.35}
                text: "Q&A"
                font_size: "24sp"
                on_press: app.root.current = 'qa'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                text: "Writing"
                font_size: "24sp"
                on_press: app.root.current = 'writingscreen'

<QAScreen>:
    id: qa
    QAScreenCanvas:
        FloatLayout:
            Image:
                source: 'background.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'uppercornerlogo.webp'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'qalogo.webp'
                size_hint: (None, None)
                size: (2900, 2900)
                pos_hint: {"center_x": 0.5, "center_y": 0.68}
        BoxLayout:
            orientation: 'vertical'
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: None, None
                    size: 700, 600  # Adjust size as needed
                    ScrollView:
                        do_scroll_x: False
                        do_scroll_y: True
                        BoxLayout:
                            id: qa_container
                            orientation: 'vertical'
                            size_hint_y: 1
                            height: self.minimum_height
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 70
                        TextInput:
                            id: question_input
                            hint_text: 'Type your question here...'
                            size_hint_x: 0.7
                        Button:
                            text: 'Submit'
                            on_press: root.submit_question()
                            size_hint_x: 0.3
        FloatLayout:
            MDRaisedButton:
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                text: "Back"
                font_size: "24sp"
                on_press: app.root.current = 'home'

