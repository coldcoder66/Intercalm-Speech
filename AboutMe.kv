#:kivy 2.3
<HomeScreen>:
    id: home
    HomeScreenCanvas:
        FloatLayout:
            Image:
                source: 'background.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image:
                source: 'websitelogo.webp'
                size_hint: (None, None)
                size: (2800, 2800)
                pos_hint: {"center_x": 0.5, "center_y": 0.68}

            MDRectangleFlatButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.65}
                text: "Writing"
                font_size: "24sp"
                on_press: app.root.current = 'writing'

            MDRectangleFlatButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.55}
                text: "Flashcards"
                font_size: "24sp"
                on_press: app.root.current = 'flashcards'

            MDRectangleFlatButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.45}
                text: "Forum"
                font_size: "24sp"
                on_press: app.root.current = 'forum'

            MDRectangleFlatButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.35}
                text: "Quizzes"
                font_size: "24sp"
                on_press: app.root.current = 'quizzes'

            MDRectangleFlatButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                text: "Lessons"
                font_size: "24sp"
                on_press: app.root.current = 'lessons'

<HobbiesScreen>:
    id: hobbies
    HobbiesScreenCanvas:
        FloatLayout:
            MDTopAppBar:
                title: "My Hobbies"
                left_action_items: [["home", lambda x: app.go_home()]]
                pos_hint: {"top": 1}

            MDGridLayout:
                cols: 2  # ðŸ”¹ 2 columns
                rows: 3  # ðŸ”¹ 3 rows
                spacing: "10dp"
                padding: "10dp"
                size_hint: 1, 0.8
                pos_hint: {"center_x": 0.5, "center_y": 0.45}

                # ðŸ”¹ Hobby 1
                BoxLayout:
                    orientation: "vertical"
                    spacing: "4dp"
                    Image:
                        source: "armorer.jpg"
                        size_hint_y: None
                        height: self.width
                        allow_stretch: True
                        keep_ratio: True
                    MDLabel:
                        text: "Armorer Helmet"
                        halign: "center"
                        size_hint_y: None
                        height: "20dp"

