ScreenManager:
    HomeScreen:
        name: 'home'
    QAScreen:
        name: 'qa'
    QuizScreen:
        name: 'quizscreen'
    LessonScreen:
        name: 'lessonscreen'
    FlashcardScreen:
        name: 'Flashcardscreen'
    WritingScreen:
        name: 'writingscreen'

<HomeScreen>:
    id: home
    HomeScreenCanvas:
        FloatLayout:
            Image:
                source: 'background.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'uppercornerlogo.webp'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'websitelogo.webp'
                size_hint: (None, None)
                size: (2900, 2900)
                pos_hint: {"center_x": 0.5, "center_y": 0.64}
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.65}
                text: "Lessons"
                font_size: "24sp"
                on_press: app.root.current = 'lessonscreen'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.55}
                text: "Flashcards"
                font_size: "24sp"
                on_press: app.root.current = 'flashcardscreen'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.45}
                text: "Quizzes"
                font_size: "24sp"
                on_press: app.root.current = 'quizscreen'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.35}
                text: "Q&A"
                font_size: "24sp"
                on_press: app.root.current = 'qa'
            MDRaisedButton:
                size_hint: (None, None)
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                text: "Writing"
                font_size: "24sp"
                on_press: app.root.current = 'writingscreen'

<QAScreen>:
    id: qa
    QAScreenCanvas:
        FloatLayout:
            Image:
                source: 'background.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'uppercornerlogo.webp'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'qalogo.webp'
                size_hint: (None, None)
                size: (2900, 2900)
                pos_hint: {"center_x": 0.5, "center_y": 0.68}
        BoxLayout:
            orientation: 'vertical'
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: None, None
                    size: 700, 600  # Adjust size as needed
                    ScrollView:
                        do_scroll_x: False
                        do_scroll_y: True
                        BoxLayout:
                            id: qa_container
                            orientation: 'vertical'
                            size_hint_y: 1
                            height: self.minimum_height
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 70
                        TextInput:
                            id: question_input
                            hint_text: 'Type your question here...'
                            size_hint_x: 0.7
                        Button:
                            text: 'Submit'
                            on_press: root.submit_question()
                            size_hint_x: 0.3
        FloatLayout:
            MDRaisedButton:
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                text: "Back"
                font_size: "24sp"
                on_press: app.root.current = 'home'

<QuizScreen>:
    id: quizscreen
    QuizScreenCanvas:
        FloatLayout:
            Image:
                source: 'background.png'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'uppercornerlogo.webp'
                allow_stretch: True
                keep_ratio: False
                size_hint: (1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            Image:
                source: 'quizlogo.webp'
                size_hint: (None, None)
                size: (2900, 2900)
                pos_hint: {"center_x": 0.5, "center_y": 0.68}
            MDRaisedButton:
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.1}
                text: "Back"
                font_size: "24sp"
                on_press: app.root.current = 'home'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.8, 0.8)
                pos_hint: {"center_x": 0.5, "center_y": 0.8}
                spacing: 20
                BoxLayout:
                    size_hint_y: None
                    height: 100
                    padding: 10
                    canvas.before:
                        Color:
                            rgba: (0.235, 0.337, 0.435, 1)  # Dark blue background
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        id: question_label
                        text: "Sample Question: What is the capital of France?"
                        font_size: "22sp"
                        color: (1, 1, 1, 1)  # White font
                        halign: "center"
                        valign: "middle"
                        size_hint_y: None
                        height: self.texture_size[1]

                GridLayout:
                    cols: 4
                    size_hint: (None, None)
                    size: (2000, 400)
                    spacing: 30

                    Button:
                        text: "A"
                        font_size: "30sp"
                        color: (1, 1, 1, 1)  # White font
                        background_normal: 'raindrop.webp'  # Raindrop image
                        on_press: app.check_answer("A")

                    Button:
                        text: "B"
                        font_size: "30sp"
                        color: (1, 1, 1, 1)  # White font
                        background_normal: 'raindrop.webp'  # Raindrop image
                        on_press: app.check_answer("B")

                    Button:
                        text: "C"
                        font_size: "30sp"
                        color: (1, 1, 1, 1)  # White font
                        background_normal: 'raindrop.webp'  # Raindrop image
                        on_press: app.check_answer("C")

                    Button:
                        text: "D"
                        font_size: "30sp"
                        color: (1, 1, 1, 1)  # White font
                        background_normal: 'raindrop.webp'  # Raindrop image
                        on_press: app.check_answer("D")
                Button:
                    text: "Next Question"
                    font_size: "20sp"
                    color: (1, 1, 1, 1)  # White font
                    background_color: (0.235, 0.337, 0.435, 1)  # Optional blue button
                    size_hint_y: None
                    height: 50
                    on_press: app.load_next_question()
            MDRaisedButton:
                size: (300, 70)
                pos_hint: {"center_x": 0.5, "center_y": 0.1}
                text: "Back"
                font_size: "24sp"
                on_press: app.root.current = 'home'

