<HomeScreen>:
    id: home
    FloatLayout:
        Image:
            source: 'assets/images/background.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Image:
            source: 'assets/images/new bg.webp'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Image:
            source: 'assets/images/websitelogo.webp'
            allow_stretch: True
            keep_ratio: False
            size_hint: (None, None)
            size: (2000, 1500)
            pos_hint: {"center_x": 0.5, "center_y": 0.58}

        # Buttons in a vertical line with compact spacing
        MDRaisedButton:
            size_hint: (None, None)
            size: (400, 100)
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            text: "Flashcards"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'flashcardscreen'

        MDRaisedButton:
            size_hint: (None, None)
            size: (400, 100)
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            text: "Quizzes"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'quizscreen'

        MDRaisedButton:
            size_hint: (None, None)
            size: (400, 100)
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            text: "Lessons"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'lessonscreen'

        MDRaisedButton:
            size_hint: (None, None)
            size: (400, 100)
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            text: "Q&A"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'qa'

        MDRaisedButton:
            size_hint: (None, None)
            size: (400, 100)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            text: "Writing"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'writingscreen'

        # Login/Signup button at the top
        MDRaisedButton:
            size_hint: (None, None)
            size: (200, 30)
            pos_hint: {"x": 0, "top": 1}
            text: "Login/Signup"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'login'