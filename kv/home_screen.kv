<HomeScreen>:
    id: home
    FloatLayout:
        Image:
            source: 'assets/images/background.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Image:
            source: 'assets/images/uppercornerlogo.webp'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Image:
            source: 'assets/images/websitelogo.webp'
            size_hint: (None, None)
            size: (2900, 2900)
            pos_hint: {"center_x": 0.5, "center_y": 0.64}
        MDRaisedButton:
            size_hint: (None, None)
            size: (300, 70)
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            text: "Lessons"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)  # Custom color (light blue)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'lessonscreen'
        MDRaisedButton:
            size_hint: (None, None)
            size: (300, 70)
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            text: "Flashcards"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)  # Custom color (light blue)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'flashcardscreen'
        MDRaisedButton:
            size_hint: (None, None)
            size: (300, 70)
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            text: "Quizzes"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)  # Custom color (light blue)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'quizscreen'
        MDRaisedButton:
            size_hint: (None, None)
            size: (300, 70)
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            text: "Q&A"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)  # Custom color (light blue)
            text_color: (0.235, 0.337, 0.435, 1)
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'qa'
        MDRaisedButton:
            size_hint: (None, None)
            size: (300, 70)
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            text: "Writing"
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)  # Custom color (light blue)
            text_color: (0.235, 0.337, 0.435, 1)  # White color for font
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'writingscreen'
        MDRaisedButton:
            size_hint: (None, None)
            size: (300, 50)
            pos_hint: {"x": 0, "top": 1}
            text: "Login/Signup "
            font_size: "24sp"
            md_bg_color: (0.737, 0.843, 0.953, 1)  # Custom color (light blue)
            text_color: (0.235, 0.337, 0.435, 1)  # White color for font
            font_name: 'assets/fonts/chalkboard-se-regular.ttf'
            on_press: app.root.current = 'login'